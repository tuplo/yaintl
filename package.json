{
	"name": "@tuplo/yaintl",
	"description": "Yet another i18n library with ICU message syntax",
	"version": "0.0.0-development",
	"repository": "git@github.com:tuplo/yaintl.git",
	"author": "Rui Costa",
	"license": "MIT",
	"keywords": [
		"i18n",
		"intl",
		"ICU",
		"messageformat"
	],
	"types": "dist/index.d.ts",
	"module": "./dist/index.esm.js",
	"main": "./dist/index.cjs.js",
	"exports": {
		".": [
			{
				"import": "./dist/index.esm.js",
				"require": "./dist/index.cjs.js",
				"default": "./dist/index.esm.js"
			},
			"./dist/index.esm.js"
		]
	},
	"files": [
		"dist/index.esm.js",
		"dist/index.cjs.js",
		"dist/index.d.ts"
	],
	"scripts": {
		"build": "tsx sh/build.ts",
		"coverage": "tsx sh/coverage.ts",
		"lint:ts": "tsc --noEmit",
		"lint": "eslint src --ext ts,tsx",
		"test:ci": " TZ=utc jest --ci",
		"test": "TZ=utc jest --watch"
	},
	"dependencies": {
		"@ffz/icu-msgparser": "2.0.0",
		"dlv": "1.1.3"
	},
	"devDependencies": {
		"@types/dlv": "1.1.2",
		"@types/jest": "29.2.2",
		"@types/node": "18.11.9",
		"@typescript-eslint/eslint-plugin": "5.42.0",
		"@typescript-eslint/parser": "5.42.0",
		"esbuild": "0.15.13",
		"eslint": "8.26.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "27.1.4",
		"jest": "29.2.2",
		"nyc": "15.1.0",
		"prettier": "2.7.1",
		"ts-jest": "29.0.3",
		"tsx": "3.11.0",
		"typescript": "4.8.4",
		"zx": "7.1.1"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"printWidth": 80,
		"useTabs": true
	},
	"eslintConfig": {
		"extends": [
			"airbnb-base",
			"prettier",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/typescript",
			"plugin:jest/all"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"jest"
		],
		"parserOptions": {
			"ecmaVersion": 9,
			"project": "./tsconfig.json"
		},
		"env": {
			"node": true,
			"jest": true
		},
		"rules": {
			"import/prefer-default-export": "off",
			"import/extensions": "off",
			"import/no-extraneous-dependencies": "off",
			"jest/prefer-expect-assertions": "off",
			"jest/no-hooks": "off",
			"lines-between-class-members": "off",
			"class-methods-use-this": "off",
			"no-restricted-syntax": [
				"error",
				{
					"selector": "LabeledStatement",
					"message": "Labels are a form of GOTO; using them makes code confusing and hard to maintain and understand."
				},
				{
					"selector": "WithStatement",
					"message": "`with` is disallowed in strict mode because it makes code impossible to predict and optimize."
				}
			]
		}
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.(t|j)sx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"^src/(.*)": "<rootDir>/src/$1"
		}
	}
}
