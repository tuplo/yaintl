{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "incremental": true,
  },
  "include": [ "src/**/*.ts" ],
  "exclude": ["node_modules"]
}